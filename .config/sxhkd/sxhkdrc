# ---------------------------- #
# :: wm independent hotkeys :: #
# ---------------------------- #

# terminal emulator
super + {_,alt +} {_,shift +} Return
	urxvt{c,_} {_,-e vim}

# program launcher
super + {d,w,shift + d}
	rofi -show {drun -columns 2,window,run}

# xfce tools
Print
    xfce4-screenshooter

# common
super + shift + {f,j,p,s,t,w,z}
    {thunar,idea,charm,spotify,telegram-desktop,firefox-developer-edition,zeal}

# office
super + control + {c,t,w}
    {libreoffice --nologo --calc, texstudio, libreoffice --nologo --writer}

# screen lock and power management
super + {_,shift +} l
    i3lock -i ~/.lock.png --24 -l "#2f343f" -o "#61afef" -w "e06c75" {_,&& systemctl suspend}

# reload sxhdk
super + Escape
	pkill -USR1 -x sxhkd


# ------------------- #
# :: bspwm hotkeys :: #
# ------------------- #

# toggle gaps
super + shift + g
    bspc config window_gap {0, 12}

# toggle borders
super + shift + b
    bspc config border_width {0, 3}

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

alt + F4
    bspc node -c

## state/flags
# set the window state
super + t
	bspc node -t {pseudo_tiled, tiled}

super + f
    bspc node -t {fullscreen, tiled}

super + space
    bspc node -t {floating, tiled}

# toggle tiled / monocle layout
super + m
	bspc desktop -l next

# set the node flags
super + shift + {m,s}
	bspc node -g {marked,sticky}

## focus/swap
# focus marked node
super + alt + m
    bspc node -f newest.marked

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the last node/desktop
{super,alt} + {_,shift +} Tab
	bspc {desktop,node} -f {next,prev}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


## preselect
# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

## move/resize
# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -12 0,bottom 0 12,top 0 -12,right 12 0}

super + alt + {Left,Down,Up,Right}
	bspc node -z {left -12 0,bottom 0 24,top 0 -24,right 12 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -12 0,top 0 12,bottom 0 -12,left 12 0}

super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -12 0,top 0 12,bottom 0 -12,left 12 0}

# move a floating window
super + alt + control + {h,j,k,l}
	bspc node -v {-12 0,0 12,0 -12,12 0}

super + alt + control + {Left,Down,Up,Right}
	bspc node -v {-12 0,0 12,0 -12,12 0}

