#!/bin/sh
DOTS=/data/Projekte/re1/dotfiles

targets=".config/compton.conf .config/fontconfig .config/rofi .config/systemd/user .config/termite .oh-my-zsh/custom .profile .vimrc .zshrc"

for target in $targets
do
    dir=$(dirname "${target}")
    mkdir -p $dir
    cp -R ~/$target $DOTS/$dir
    echo "~/$target â†’ $DOTS/$dir"
done

# save installed packages
pacman -Qet > $DOTS/packages.txt
