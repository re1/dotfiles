#!/bin/sh
DOTS=/data/Projects/re1/dotfiles

targets=".background.png .config/autorandr .config/compton.conf .config/dunst 
.config/environment.d .config/fontconfig .config/gtk-2.0 .config/gtk-3.0 .config/neofetch 
.config/nvim .config/polybar .config/rofi .config/systemd/user .local/share/fonts .lock.png 
.oh-my-zsh/custom .themes .vim/colors .vimrc .zprofile .zshrc .xinitrc .Xresources 
.xserverrc"

rm -rf $DOTS/.config $DOTS/.local

for target in $targets
do
    dir=$(dirname "${target}")
    mkdir -p $dir
    cp -R ~/$target $DOTS/$dir
    echo "~/$target â†’ $DOTS/$dir"
done

# save installed packages
pacman -Qet > $DOTS/packages.txt
