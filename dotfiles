#!/bin/sh
DOTS=/data/Projekte/re1/dotfiles

targets=".config/compton.conf .config/dunst .config/fontconfig .config/rofi .config/systemd/user 
.local/share/fonts .oh-my-zsh/custom .profile .vim/colors .vimrc .zshrc .Xresources .xsessionrc"

rm -rf $DOTS/.config

for target in $targets
do
    dir=$(dirname "${target}")
    mkdir -p $dir
    cp -R ~/$target $DOTS/$dir
    echo "~/$target â†’ $DOTS/$dir"
done

# save installed packages
pacman -Qet > $DOTS/packages.txt
